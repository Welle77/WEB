extends layout

block content
    h1= title
    br
    form(method='GET', action='')
        #form-group
            label Exercises:
                li.list-group-item
                    table( class="table")
                        tr
                            th Name
                            th Description
                            th Sets
                            th Reps
                            th Time
                                each exercise in exercises
                                    tr
                                        td #{exercise.name}
                                        td #{exercise.description}
                                        td #{exercise.sets}
                                        td #{exercise.reps}
                                        td #{exercise.time}
    block addworkout
        br
        a(href="/" class="btn btn-primary") Add Exercise
 
                        